<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:onClick="randomSong"
        android:text="Выбрать песню"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRandomSong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:hint="Здесь появится название выбранной песни"
        app:autoSizeMinTextSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRandom" />

    <EditText
        android:id="@+id/editTextAddSong"
        android:layout_width="409dp"
        android:layout_height="45dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="Введите название песни, которую хотите добавить"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textViewRandomSong"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:onClick="addSong"
        android:text="Добавить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddSong" />

</androidx.constraintlayout.widget.ConstraintLayout>